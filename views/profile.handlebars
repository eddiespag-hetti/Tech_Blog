<div class="row">
  <div class="col-auto px-5 mx-5 py-4">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 px-5 mx-5">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <input class="form-control" type="text" id="blog-name" name="blog-name" />
      </div>
     
      <div class="form-group">
        <label for="blog-desc">Description:</label>
        <textarea class="form-control" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-warning mt-2">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list justify-content-center text-center my-4">
    <h3>Current blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2 mt-4">
      <div class="col-md-8">
        <h4><a class="text-secondary border py-2 my-2 px-2 mx-2" style="text-decoration: none;" href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>
