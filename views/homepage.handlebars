<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog|}}
<div  class="row justify-content-center py-2">
<div class="col-lg-4 col-md-6 d-flex align-items-center">
  <div class="card mb-4 shadow-lg">
  
    <div class="card-body">
      <h5 class="card-title">
        {{{get_emoji}}} <a href="/blog/{{blog.id}}" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">{{blog.name}}</a>
      </h5>
      <p class="card-text">{{blog.description}}</p>
      <p class="card-text"><small class="text-muted">Created by {{blog.user.name}} on {{format_date blog.date_created}}</small></p>
    </div>
  </div>
</div>
</div>

{{/each}}



